<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestaoentregas.FXController.CadastroMotoristaController">
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label text="Cadastro de Novo Motorista" wrapText="true">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Nome Completo:" />
            <TextField fx:id="txtNomeMotorista" promptText="Digite seu nome" GridPane.columnIndex="1" />

            <Label text="Telefone:" GridPane.rowIndex="1" />
            <TextField fx:id="txtTelefoneMotorista" promptText="(XX) XXXXX-XXXX" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="CPF:" GridPane.rowIndex="2" />
            <TextField fx:id="txtCpfMotorista" promptText="XXX.XXX.XXX-XX" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="CNH:" GridPane.rowIndex="3" />
            <TextField fx:id="txtCnhMotorista" promptText="NÃºmero da CNH" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Idade:" GridPane.rowIndex="4" />
            <TextField fx:id="txtIdadeMotorista" promptText="Sua idade" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Separator prefWidth="200.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />

            <Label text="Email:" GridPane.rowIndex="6" />
            <TextField fx:id="txtEmailMotorista" promptText="seu.email@exemplo.com" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Senha:" GridPane.rowIndex="7" />
            <PasswordField fx:id="txtSenhaMotorista" promptText="Crie uma senha" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        </GridPane>

        <HBox alignment="CENTER" spacing="15.0">
            <VBox.margin>
                <Insets bottom="15.0" top="30.0" />
            </VBox.margin>

            <Button mnemonicParsing="false" onAction="#acaoCadastrarMotorista" text="Finalizar Cadastro" />
            <Button mnemonicParsing="false" onAction="#acaoVoltar" text="Voltar para Login" />
        </HBox>

    </VBox>
</AnchorPane>