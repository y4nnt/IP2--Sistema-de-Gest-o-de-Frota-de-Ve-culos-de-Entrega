<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MotoristaPrincipalController">
    <center>
        <TableView fx:id="tabelaEntregas" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colunaId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colunaEndereco" prefWidth="396.00000762939453" text="Endereço de Entrega" />
                <TableColumn fx:id="colunaStatus" prefWidth="115.99996948242188" text="Status" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <top>
        <Label text="Lista de Entregas Atribuídas" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="427.0" prefWidth="160.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVisualizarRota" mnemonicParsing="false" onAction="#handleVisualizarRota" prefWidth="140.0" text="Visualizar Rota" textAlignment="CENTER" />
                <Button fx:id="btnAcessarMenu" mnemonicParsing="false" onAction="#handleAcessarMenu" prefWidth="140.0" text="Acessar Menu" />
            </children>
            <padding>
                <Insets right="10.0" top="20.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>