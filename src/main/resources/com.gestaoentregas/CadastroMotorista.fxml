<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestaoentregas.FXController.CadastroMotoristaController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Novo Motorista">
        <font> <Font name="System Bold" size="18.0" /> </font>
    </Label>

    <TextField fx:id="txtNome" promptText="Nome Completo" />
    <TextField fx:id="txtTelefone" promptText="Telefone (xx) xxxxx-xxxx" />
    <TextField fx:id="txtCpf" promptText="CPF (apenas números)" />
    <TextField fx:id="txtCnh" promptText="Número da CNH" />
    <TextField fx:id="txtIdade" promptText="Idade (Ex: 30)" />

    <Button text="Cadastrar"
            maxWidth="Infinity"
            style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"
            onAction="#acaoSalvar"/>

</VBox>