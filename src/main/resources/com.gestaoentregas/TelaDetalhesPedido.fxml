<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="500.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestaoentregas.FXController.TelaDetalhesPedidoController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Detalhes da Entrega">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>
    <Separator prefWidth="200.0" />

    <GridPane vgap="10" hgap="10" alignment="CENTER_LEFT">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="120" halignment="LEFT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblId" text="..." GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblStatus" text="..." GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: blue; -fx-font-weight: bold;"/>

        <Label text="Endereço:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblEndereco" text="..." GridPane.columnIndex="1" GridPane.rowIndex="2" wrapText="true"/>

        <Label text="Observações:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblObs" text="..." GridPane.columnIndex="1" GridPane.rowIndex="3" wrapText="true" style="-fx-font-style: italic;"/>
    </GridPane>

    <Separator prefWidth="200.0" />

    <HBox alignment="CENTER" spacing="20">
        <Button text="Voltar" onAction="#handleVoltar" prefWidth="100"/>
        <Button fx:id="btnVerMotorista" text="Ver Motorista" onAction="#handleVerMotorista" prefWidth="150" style="-fx-background-color: #90EE90; -fx-font-weight: bold;"/>
    </HBox>
</VBox>