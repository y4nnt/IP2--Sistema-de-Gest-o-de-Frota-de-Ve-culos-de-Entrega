<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestaoentregas.FXController.LogonController">
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <Label text="Bem-vindo ao Sistema de Gestão de Entregas" wrapText="true">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>
        
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            
            <Label text="Usuário (Email):" />
            <TextField fx:id="txtUsuario" promptText="Digite seu email" GridPane.columnIndex="1" />
            
            <Label text="Senha:" GridPane.rowIndex="1" />
            <PasswordField fx:id="txtSenha" promptText="Digite sua senha" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
        
        <HBox alignment="CENTER" spacing="15.0">
            <VBox.margin>
                <Insets bottom="15.0" top="30.0" />
            </VBox.margin>
            
            <Button fx:id="btnLoginCliente" mnemonicParsing="false" onAction="#acaoLoginCliente" text="Login Cliente" />
            <Button fx:id="btnLoginAdmin" mnemonicParsing="false" onAction="#acaoLoginAdmin" text="Login Admin" />
            <Button fx:id="btnLoginMotorista" mnemonicParsing="false" onAction="#acaoLoginMotorista" text="Login Motorista" />
        </HBox>
        
        <HBox alignment="CENTER" spacing="15.0">
            <Button mnemonicParsing="false" onAction="#acaoCadastroMotorista" text="Cadastrar Motorista" />
            <Button mnemonicParsing="false" onAction="#acaoCadastroCliente" text="Cadastrar Cliente" />
        </HBox>
    </VBox>
</AnchorPane>
