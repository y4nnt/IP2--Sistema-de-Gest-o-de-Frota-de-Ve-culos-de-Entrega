<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestaoentregas.FXController.CadastroVeiculoController">
    <children>
        <Label text="Cadastro de Veículo">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="240.0" />
            </columnConstraints>
            <children>
                <Label text="Marca:" />
                <TextField fx:id="txtMarca" GridPane.columnIndex="1" />

                <Label text="Modelo:" GridPane.rowIndex="1" />
                <TextField fx:id="txtModelo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Ano:" GridPane.rowIndex="2" />
                <TextField fx:id="txtAno" promptText="YYYY" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Placa:" GridPane.rowIndex="3" />
                <TextField fx:id="txtPlaca" promptText="AAA-1234" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Tipo de Combustível:" GridPane.rowIndex="5" />
                <ComboBox fx:id="cmbCombustivel" prefWidth="240.0" promptText="Selecione" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Capacidade" GridPane.rowIndex="4" />
            <TextField fx:id="txtCapacidade" promptText="50kg" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleSalvarVeiculo" style="-fx-font-weight: bold;" text="Salvar Cadastro" />

                <Button mnemonicParsing="false" onAction="#handleVoltar" text="Voltar" />
            </children>
        </HBox>

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
